<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.avatar.AvatarActivity">

        <ImageView
            android:id="@+id/imgAvatar1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar4"
            app:layout_constraintDimensionRatio="h,"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cat1"
            android:contentDescription="@string/contentDescriptionImg1" />

        <ImageView
            android:id="@+id/imgAvatar2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar5"
            app:layout_constraintDimensionRatio="h,"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cat2"
            android:contentDescription="@string/contentDescriptionImg2" />

        <ImageView
            android:id="@+id/imgAvatar3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar6"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar2"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cat3"
            android:contentDescription="@string/contentDescriptionImg3" />

        <ImageView
            android:id="@+id/imgAvatar4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar1"
            tools:src="@drawable/cat4"
            android:contentDescription="@string/contentDescriptionImg4" />

        <ImageView
            android:id="@+id/imgAvatar5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar4"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar2"
            tools:src="@drawable/cat5"
            android:contentDescription="@string/contentDescriptionImg5" />

        <ImageView
            android:id="@+id/imgAvatar6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar5"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar2"
            tools:src="@drawable/cat6"
            android:contentDescription="@string/contentDescriptionImg6" />

        <TextView
            android:id="@+id/lblAvatar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar1_name"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar4"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar2"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />

        <TextView
            android:id="@+id/lblAvatar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar2_name"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar5"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar6"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />

        <TextView
            android:id="@+id/lblAvatar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar3_name"
            app:layout_constraintBottom_toTopOf="@+id/imgAvatar6"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />

        <TextView
            android:id="@+id/lblAvatar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar4_name"
            app:layout_constraintBottom_toBottomOf="@+id/imgAvatar4"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar5"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />

        <TextView
            android:id="@+id/lblAvatar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar5_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgAvatar6"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />

        <TextView
            android:id="@+id/lblAvatar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginLblAvatar"
            android:layout_marginBottom="@dimen/marginLblAvatar"
            tools:text="@string/avatar6_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:background="@color/colorBackLblAvatar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
